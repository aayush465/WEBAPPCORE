@model IEnumerable<QuizWebAppCore.Models.Round>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>Round List</h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-plus"></i>  @Html.ActionLink("Create New", "Create")</li>
    </ol>
</section>

<section class="content">
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-bordered">
                <tr class="btn-primary">
                    <th>
                        Name
                    </th>
                    <th>
                        Name Np
                    </th>
                    @*<th>
                    Description
                    </th>*@
                    <th>
                        Order
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>

                    <th>Action</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="nep1">
                            @Html.DisplayFor(modelItem => item.RoundName)
                        </td>
                        <td class="nep1">
                            @Html.DisplayFor(modelItem => item.RoundNameNp)
                        </td>
                        @*<td class="nep1">
                    @Html.DisplayFor(modelItem => item.RoundDescription)
                    </td>*@
                        <td class="">
                            @Html.DisplayFor(modelItem => item.RoundSequenceOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.RoundId }, new { @class = "btn-primary btn-sm" })
                            @*@Html.ActionLink("Details", "Details", new { id = item.RoundId} ,new {@class = "btn-success btn-sm"})*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.RoundId }, new { @class = "btn-danger btn-sm" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>